<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quizapp.Controllers.LoginController"
            styleClass="root-pane">

    <stylesheets>
        <URL value="@../UI-design.css"/>
    </stylesheets>

    <!-- Top: Back button -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="backButton" text="â†" onAction="#handleBackButton" styleClass="link-button">
                <font>
                    <Font name="Avenir Roman" size="14"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Center: Form -->
    <center>
        <StackPane>

            <Region styleClass="card-background"/>

            <VBox spacing="16" alignment="CENTER" styleClass="form-container">
                <padding>
                    <Insets top="24" right="24" bottom="24" left="24"/>
                </padding>

                <!-- Heading -->
                <Label text="Login"
                       styleClass="heading" style="-fx-translate-y:-20;">
                    <font><Font name="Avenir Heavy" size="24" /></font>
                </Label>

                <!-- Email field -->
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="emailField"
                               promptText="Enter your email"
                               styleClass="input-field"
                               maxWidth="400" />
                </VBox>

                <!-- Password field -->
                <VBox spacing="5" alignment="CENTER">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password"
                                   styleClass="input-field"
                                   maxWidth="400"/>
                </VBox>

                <!-- Login button -->
                <Button fx:id="loginButton"
                        text="Login"
                        onAction="#handleLogin"
                        styleClass="primary-button"
                        maxWidth="400"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>