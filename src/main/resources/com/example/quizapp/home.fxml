<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quizapp.Controllers.HomeController">

    <top>
        <fx:include source="menu.fxml"/>
    </top>


    <!-- Center Content -->
    <center>
        <VBox spacing="30" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" >
            <!-- Page-specific content -->
            <padding>
                <Insets top="50"/>
            </padding>
            <Label text="Welcome to the Home Page!" />

            <!-- HBox 1: Search Bar -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Filter By"/>
                <TextField fx:id="searchField" promptText="Search..." />
                <Button text="Search" onAction="#handleSearch" />
            </HBox>


            <!-- HBox 2: Placeholder for middle content -->
            <HBox spacing="10" alignment="CENTER" >
                <ListView fx:id="quizResults" prefHeight="200" prefWidth="550" />
            </HBox>

            <!-- HBox 2: Placeholder for middle content -->
            <HBox alignment="CENTER">
                <Label text="Quizzes for ### topic -> content here" />
            </HBox>

        </VBox>
    </center>

    <bottom>
        <Label text="Bottom border" />
    </bottom>

</BorderPane>
